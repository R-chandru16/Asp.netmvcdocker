@model Asp.net_student.Models.Users

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Login</title>
    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <link rel="stylesheet" href="fontawesome/css/all.min.css">
    <link rel="stylesheet" href="css/templatemo-style.css">*@
    

    
</head>
<body>
        <div class="main-container">
   
        <div class="login-container">
            <div class="image-container">
                <img src="~/login.png" alt="login image" width="300px" height="250px"/>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <h1>LOGIN </h1>
                    @using (Html.BeginForm("Index", "Users", FormMethod.Post))
                    {
                        @*@Html.LabelFor(e => e.Email)
                        @Html.EditorFor(e => e.Email, new
                        {
                            htmlAttributes =
                        new { @class = "form-control", @type = "email", @placeholder = "Email" }
                        })*@


                        @Html.LabelFor(e => e.Name)
                        @Html.EditorFor(e => e.Name, new
                   {
                       htmlAttributes =
                        new
                        {
                            @class = "form-control",
                            @type = "text",
                            @placeholder =
                        "Name",
                            @autocomplete = "on"
                        }
                   })



                        @Html.LabelFor(e => e.Password)
                        @Html.EditorFor(e => e.Password, new
                        {
                            htmlAttributes =
                        new
                        {
                            @class = "form-control",
                            @type = "password",
                            @placeholder =
                        "Password"

                        }
                        })
                        <div class="form-group" style="margin-top:10px;">
                            <input type="submit" value="Login" class="btn btn-primary" />
                            <p>@ViewBag.Message</p>
                        </div>

                        @Html.ActionLink(" Register | click here to Create account", "Create", "Students", new { @class = "btn btn-link" })
                    }
                </div>
            </div>
        </div>
            
</body>

</html>
<script>
    $(document).ready(function () {
        $("#logout").hide();
        $("#user-name").hide();
    });
</script>
